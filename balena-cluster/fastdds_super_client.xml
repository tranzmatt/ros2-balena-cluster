<?xml version="1.0" encoding="UTF-8" ?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <profiles>
        <!-- Super Client Profile - Can see all topics across the cluster -->
        <participant profile_name="super_client_participant" is_default_profile="true">
            <rtps>
                <builtin>
                    <discovery_config>
                        <!-- SUPER_CLIENT can relay discovery info like a server -->
                        <discoveryProtocol>SUPER_CLIENT</discoveryProtocol>
                        <discoveryServersList>
                            <RemoteServer prefix="44.53.00.5f.45.50.52.4f.53.49.4d.41">
                                <metatrafficUnicastLocatorList>
                                    <locator>
                                        <udpv4>
                                            <address>172.32.1.250</address>
                                            <port>11811</port>
                                        </udpv4>
                                    </locator>
                                </metatrafficUnicastLocatorList>
                            </RemoteServer>
                        </discoveryServersList>
                        <leaseDuration>
                            <sec>20</sec>
                            <nanosec>0</nanosec>
                        </leaseDuration>
                        <leaseAnnouncement>
                            <sec>5</sec>
                            <nanosec>0</nanosec>
                        </leaseAnnouncement>
                    </discovery_config>
                </builtin>
                <useBuiltinTransports>true</useBuiltinTransports>
                <n>ros2_super_client</n>
            </rtps>
        </participant>
    </profiles>
</dds>
